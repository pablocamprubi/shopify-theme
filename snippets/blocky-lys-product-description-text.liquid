{%  capture stars %} 
  <span class="blocky-pdr-review-stars"> {{star}} {{star}} {{star}} {{star}} {{star}} </span>
{% endcapture %}

{%- unless text == blank -%}
  <div class="blocky-pdr-container-text" data-index="{{ index }}">
    <div class="blocky-pdr-review blocky-pdr-review-text-{{ text_alignment }} blocky-pdr-{{ image_alignment }}">
      {%- if image != blank -%}
        <div class="blocky-pdr-image blocky-pdr-image-{{ image_shape }}">
          <img
              src="{{ image | image_url }}"
              alt="{{ reviewer }}"
              width="auto"
              height="auto"
              {% if index != 1 %}loading="lazy"{% endif %}
          >
      </div>
      {% elsif show_placeholder  %}
        <div class="blocky-pdr-image blocky-pdr-image-{{ image_shape }} blocky-icon-person-placeholder" style="--placeholder-size: {{ image_size }}px">
          <span class="material-icons filled material-symbols-outlined"> person </span>
        </div>
      {%- endif -%}
      <div class="blocky-pdr-review-child blocky-pdr-text-{{ text_alignment }}">
        <div class="blocky-pdr-review-text">
          {{ text }}
        </div>
        {%- unless reviewer == blank and display_stars == false -%}
          {% if display_stars and star_placement == "above" %}
              {{ stars }}
          {%- endif -%}
          {%- unless reviewer == blank -%}
              <p class="blocky-pdr-review-reviewer"> {{ reviewer }} </p>
          {%- endunless -%}
          {% if display_stars and star_placement == "below" %}
              {{ stars }}
          {%- endif -%}
        {%- endunless -%}
      </div>
    </div>
  </div>
{%- endunless -%}
