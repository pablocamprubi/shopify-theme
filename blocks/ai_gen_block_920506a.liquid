{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-gallery-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.gallery_spacing }}px;
    width: 100%;
  }

  .ai-product-gallery-main-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.main_image_aspect_ratio }};
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-gallery-main-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-gallery-main-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    position: relative;
  }

  .ai-product-gallery-main-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-gallery-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    border-radius: 4px;
    font-size: 14px;
    text-align: center;
  }

  .ai-product-gallery-thumbnails-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.thumbnail_spacing }}px;
    overflow-x: auto;
    padding: 4px 0;
    scrollbar-width: thin;
  }

  .ai-product-gallery-thumbnails-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 4px;
  }

  .ai-product-gallery-thumbnails-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 2px;
  }

  .ai-product-gallery-thumbnails-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 2px;
  }

  .ai-product-gallery-thumbnail-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.thumbnail_size }}px;
    height: {{ block.settings.thumbnail_size }}px;
    border-radius: {{ block.settings.thumbnail_border_radius }}px;
    overflow: hidden;
    cursor: pointer;
    border: 2px solid transparent;
    transition: all 0.3s ease;
    background-color: #f4f4f4;
  }

  .ai-product-gallery-thumbnail-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.thumbnail_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-product-gallery-thumbnail-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.thumbnail_active_border_color }};
  }

  .ai-product-gallery-thumbnail-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-gallery-thumbnail-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-product-gallery-thumbnail-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.4;
  }

  .ai-product-gallery-zoom-indicator-{{ ai_gen_id }} {
    position: absolute;
    top: 16px;
    right: 16px;
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 8px;
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .ai-product-gallery-main-{{ ai_gen_id }}:hover .ai-product-gallery-zoom-indicator-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-product-gallery-main-{{ ai_gen_id }}:hover .ai-product-gallery-main-image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.zoom_scale }});
  }

  @media screen and (max-width: 749px) {
    .ai-product-gallery-{{ ai_gen_id }} {
      gap: {{ block.settings.gallery_spacing | times: 0.7 }}px;
    }

    .ai-product-gallery-thumbnail-{{ ai_gen_id }} {
      width: {{ block.settings.thumbnail_size | times: 0.8 }}px;
      height: {{ block.settings.thumbnail_size | times: 0.8 }}px;
    }

    .ai-product-gallery-thumbnails-{{ ai_gen_id }} {
      gap: {{ block.settings.thumbnail_spacing | times: 0.7 }}px;
    }
  }
{% endstyle %}

<product-gallery-{{ ai_gen_id }}
  class="ai-product-gallery-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-product-gallery-main-{{ ai_gen_id }}">
    {% if block.settings.main_image %}
      <img
        src="{{ block.settings.main_image | image_url: width: 1000 }}"
        alt="{{ block.settings.main_image.alt | escape }}"
        class="ai-product-gallery-main-image-{{ ai_gen_id }}"
        width="{{ block.settings.main_image.width }}"
        height="{{ block.settings.main_image.height }}"
        loading="lazy"
        data-main-image
      >
      {% if block.settings.enable_zoom %}
        <div class="ai-product-gallery-zoom-indicator-{{ ai_gen_id }}">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
            <line x1="11" y1="8" x2="11" y2="14"></line>
            <line x1="8" y1="11" x2="14" y2="11"></line>
          </svg>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-product-gallery-main-placeholder-{{ ai_gen_id }}">
        {{ 'product-apparel-1' | placeholder_svg_tag }}
        <div class="ai-product-gallery-empty-state-{{ ai_gen_id }}">
          Add your main product image
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-product-gallery-thumbnails-{{ ai_gen_id }}">
    {% for i in (1..4) %}
      {% liquid
        assign thumbnail_key = 'thumbnail_' | append: i
        assign thumbnail_image = block.settings[thumbnail_key]
      %}
      
      <div
        class="ai-product-gallery-thumbnail-{{ ai_gen_id }} {% if i == 1 %}active{% endif %}"
        data-thumbnail-index="{{ i }}"
        {% if thumbnail_image %}
          data-image-src="{{ thumbnail_image | image_url: width: 1000 }}"
          data-image-alt="{{ thumbnail_image.alt | escape }}"
        {% endif %}
      >
        {% if thumbnail_image %}
          <img
            src="{{ thumbnail_image | image_url: width: 200 }}"
            alt="{{ thumbnail_image.alt | escape }}"
            class="ai-product-gallery-thumbnail-image-{{ ai_gen_id }}"
            width="200"
            height="200"
            loading="lazy"
          >
        {% else %}
          <div class="ai-product-gallery-thumbnail-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</product-gallery-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.mainImage = this.querySelector('[data-main-image]');
        this.thumbnails = this.querySelectorAll('.ai-product-gallery-thumbnail-{{ ai_gen_id }}');
        this.setupEventListeners();
        this.setInitialMainImage();
      }

      setupEventListeners() {
        this.thumbnails.forEach((thumbnail, index) => {
          thumbnail.addEventListener('click', () => {
            this.switchMainImage(thumbnail, index);
          });
        });
      }

      setInitialMainImage() {
        if (!this.mainImage) return;
        
        const firstThumbnailWithImage = Array.from(this.thumbnails).find(thumb => 
          thumb.dataset.imageSrc
        );
        
        if (firstThumbnailWithImage && !this.mainImage.src.includes('placeholder')) {
          return;
        }
        
        if (firstThumbnailWithImage) {
          this.switchMainImage(firstThumbnailWithImage, 0);
        }
      }

      switchMainImage(clickedThumbnail, index) {
        if (!this.mainImage || !clickedThumbnail.dataset.imageSrc) return;

        this.thumbnails.forEach(thumb => thumb.classList.remove('active'));
        clickedThumbnail.classList.add('active');

        this.mainImage.src = clickedThumbnail.dataset.imageSrc;
        this.mainImage.alt = clickedThumbnail.dataset.imageAlt || '';
      }
    }

    customElements.define('product-gallery-{{ ai_gen_id }}', ProductGallery{{ ai_gen_id }});
  })();
</script>

