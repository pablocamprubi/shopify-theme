{% style %}
.blocky-testimonials-author-container {
  display: flex;
  align-items: center;
}
.blocky-testimonials-author-container.author-border {
  margin-top: 0.75rem;  
  border-top: solid 1px var(--border-color);  
  padding-top: 0.75rem;
}
.blocky-testimonials-author-img {
  width: 3rem;
  height: 3rem;
  margin-right: 1rem;
  border-radius: 50%;
  overflow: hidden;
}
.blocky-testimonials-author-img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center center;
}
.blocky-testimonials-card-content {
  padding: 32px;
  display: flex;
  flex-direction: column;
  gap: var(--content-container-gap);
  width: 100%;
}
.blocky-testimonials-container {
  display: flex;
  flex-wrap: wrap;
  column-gap: 32px;
  row-gap: 16px;
  width: 100%;
  margin-top: 1.5rem;
}
.blocky-testimonials-card {
  display: flex;
  align-items: center;
  overflow: hidden;
  flex-direction: column;
  border-radius: var(--border-radius);
  background-color: var(--card-background-color);
  max-height: fit-content;
  width: 20%;
  flex-grow: 1;
  box-shadow: rgba(0, 0, 0, 0.12) 0px 2px 4px;   
  line-height: normal;
}
.blocky-testimonials-heading {
  font-size: var(--heading-font-size);
  color: var(--heading-color);
  line-height: normal;
}
.blocky-testimonials-desc > * {
  font-size: var(--desc-font-size);
  color: var(--desc-color);
}
.blocky-testimonials-author {
  font-size: var(--author-font-size);
  color: var(--desc-color);
}  
.blocky-testimonials-location {
  font-size: var(--location-font-size);
  color: var(--desc-color);
}
.blocky-testimonials .blocky-square video,
.blocky-testimonials .blocky-square img {
  aspect-ratio: 9/9;
  object-fit: cover;
}
.blocky-testimonials .blocky-long video,
.blocky-testimonials .blocky-long img {
  aspect-ratio: 9/16;
  object-fit: cover;
}
.blocky-testimonials .blocky-circle video,
.blocky-testimonials .blocky-circle img {
  aspect-ratio: 9/9;
  border-radius: 50%;
  overflow: hidden;
  object-fit: cover;
}
.blocky-testimonials .blocky-wide video,
.blocky-testimonials .blocky-wide img {
  aspect-ratio: 16/9;
  object-fit: cover;
}
.blocky-testimonials video,
.blocky-testimonials img {
  border-radius: calc(var(--border-radius) * .5);
}
.blocky-testimonials .blocky-video-play-button,
.blocky-testimonials .blocky-video-play-button svg {
  height: 40px;
  width: 40px;
}
@media screen and (max-width: 749px) {
  .blocky-testimonials-card-content {
    padding: 24px;
    gap: calc(var(--content-container-gap) * .75);
  }
  .blocky-testimonials-card {
    width: 100%;
    flex-wrap: wrap;
  }
}  
.blocky-testimonial-media {
  width: var(--media-width);
  padding-top: 32px;
}
.blocky-testimonial-media.blocky-testimonial-media-full {
  padding-top: 0rem;
}
.blocky-testimonial-media.blocky-testimonial-media-full img,
.blocky-testimonial-media.blocky-testimonial-media-full video {
  border-bottom-left-radius: 0px;
  border-bottom-right-radius: 0px;
}
.blocky-text-container-right .blocky-testimonials-author-container {
  justify-content: end;
}
.blocky-text-container-center .blocky-testimonials-author-container {
  justify-content: center;
}
.blocky-text-container-left .blocky-testimonials-author-container {
  justify-content: start;
}
.blocky-mini-tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 16px;
  justify-content: center;
}
.blocky-mini-tag {
  box-shadow: rgba(0, 0, 0, 0.12) 0px 2px 4px;   
  background-color: var(--tag-bg);
  border-radius: var(--tag-border-radius);
  padding: 10px 16px;
  line-height: normal;
  color: var(--tag-text-color);
  font-size: var(--tag-text-size);
}
@media screen and (max-width: 749px) {
  .blocky-mini-tag {
    font-size: calc(var(--tag-text-size) * .85);
    padding: 8px 14px;
  }
}
.blocky-mini-tags-tilt > .blocky-mini-tag:nth-child(1),
.blocky-mini-tags-tilt > .blocky-mini-tag:nth-child(3) {
  transform: rotate(-2deg)
}
.blocky-mini-tags-tilt > .blocky-mini-tag:nth-child(2),
.blocky-mini-tags-tilt > .blocky-mini-tag:nth-child(4) {
  transform: rotate(2deg)
}
