<div class="blocky" style="display: block; padding: 0; margin: 0;" id="{{ section.settings.scroll_to_target }}"></div>

{% schema %}
{
  "name": "BKY - Scroll-To Target",
  "enabled_on": {"templates": [ "product" ]},
  "settings": [
    {
      "type": "header",
      "content": "How to use"
    },
    { 
      "type": "paragraph",
      "content": "Use this section with the 'Scroll To' block from the product information. Place it right above the section you want to scroll to. If there are multiple sections with the same button target, it will scroll to the topmost one."
    },
    {
      "type": "radio",
      "id": "scroll_to_target",
      "label": "Button target",
      "default": "blocky-scroll-to-target-1",
      "options": [
        {
          "value": "blocky-scroll-to-target-1",
          "label": "Button 1"
        },
        {
          "value": "blocky-scroll-to-target-2",
          "label": "Button 2"
        },
        {
          "value": "blocky-scroll-to-target-3",
          "label": "Button 3"
        },
        {
          "value": "blocky-scroll-to-target-4",
          "label": "Button 4"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Blocky Scroll-To Target",
    }
  ]
}
{% endschema %}